<div class="modal fade" tabindex="-1" role="dialog" id="userCreateDialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="themeDialogTitle">Новий користувач</h4>
            </div>
            <div class="modal-body">
                <form class="create-user-form">
                    <div class="form-group">
                        <label for="userSurnameInput">Прізвище:</label>
                        <input type="text" class="form-control" placeholder="введіть прізвище" id="userSurnameInput">
                    </div>
                    <div class="form-group">
                        <label for="userNameInput">Ім'я:</label>
                        <input type="text" class="form-control" placeholder="введіть ім'я" id="userNameInput">
                    </div>
                    <div class="form-group">
                        <label for="userMidnameInput">По-батькові:</label>
                        <input type="text" class="form-control" placeholder="введіть ім'я по-батькові" id="userMidnameInput">
                    </div>
                    <div class="form-group">
                        <label for="userEmailInput">Електронна пошта:</label>
                        <p class="text-warning font-small">Буде використано як тимчасовий логін для входу в систему</p>
                        <input type="text" class="form-control" placeholder="введіть пошту" id="userEmailInput">
                        <p class="text-danger" style="display: none" id="email-error-text"></p>
                    </div>
                    <div class="form-group">
                        <label for="userRoleInput">Роль:</label>
                        <select class="form-control search-more-content" id="userRoleInput" >
                            <option disabled selected value="0" class="def-search-filter-option" style="display:none">Оберіть роль</option>
                            {% for i in userRoles|default([]) %}
                                <option value={{i.value}}>{{ i.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group" id="facultyInputHolder">
                        <label for="userFacultyInput">Факультет:</label>
                        <select class="form-control search-more-content" id="userFacultyInput" >
                            <option disabled selected value="0" class="def-search-filter-option" style="display:none">Оберіть факультет</option>
                            {% for i in faculties|default([]) %}
                                <option value={{i.value}}>{{ i.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group" id="specInputHolder">
                        <label for="userSpecialityInput">Спеціальність:</label>
                        <select class="form-control search-more-content" id="userSpecialityInput" >
                            <option disabled selected value="0" class="def-search-filter-option" style="display:none">Оберіть спеціальність</option>
                            {% for i in specialities|default([]) %}
                                <option value={{i.value}}>{{ i.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group" id="yearInputHolder">
                        <label for="userYearInput">Рік навчання:</label>
                        <select class="form-control search-more-content" id="userYearInput" >
                            <option disabled selected value="0" class="def-search-filter-option" style="display:none">Оберіть рік навчання</option>
                            {% for i in years|default([]) %}
                                <option value={{i.value}}>{{ i.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group" id="depInputHolder">
                        <label for="userDepartInput">Кафедра:</label>
                        <select class="form-control search-more-content" id="userDepartInput" >
                            <option disabled selected value="0" class="def-search-filter-option" style="display:none">Оберіть кафедру</option>
                            {% for i in departments|default([]) %}
                                <option value={{i.value}}>{{ i.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="userLoginInput">Тимчасовий пароль:</label>
                        <input type="text" class="form-control" id="userLoginInput" disabled>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Скасувати</button>
                <button type="button" class="btn btn-success" id="createUserBtn" disabled>Cтворити</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->