<div class="user-holder">
    <div class="name-holder">{{user.name}}</div>
    <div class="info-holder">
        {% include '../templates/info_row.twig' with { 'title': 'Роль','info': user.role} %}
        {% include '../templates/info_row.twig' with { 'title': 'Факультет','info': user.faculty} %}
        {% if user.role_id==ROLES.STUDENT_ID %}
            {%  include '../templates/info_row.twig' with { 'title': 'Спеціальність','info': user.speciality} %}
            {%  include '../templates/info_row.twig' with { 'title': 'Курс','info': user.course} %}
        {% elseif user.role_id==ROLES.TEACHER_ID or user.role_id==DEPARTMENT_WORKER_ID %}
            {%  include '../templates/info_row.twig' with { 'title': 'Кафедра','info': user.department} %}
        {%  endif %}
        {%  include '../templates/info_row.twig' with { 'title': 'Електронна пошта','info': user.email} %}
        <div class="btn-holder">
            <button class="delete-user" type="button" value="{{ user.login }}">Видалити користувача</button>
        </div>
    </div>
</div>